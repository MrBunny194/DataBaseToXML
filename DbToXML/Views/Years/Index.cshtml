@model  DbToXML.ViewModel.YearsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-6">
        <table class="table">
            <tr>
                <th class="text-center">@Html.DisplayNameFor(model => model.NewYear)</th>
                @if (Roles.IsUserInRole(User.Identity.Name, "admin"))
                {
                    <th> </th>
                }

            </tr>
            @Html.DisplayFor(model => model.YersView)
        </table>
    </div>

    <div class="col-xs-3">
        @if (Roles.IsUserInRole(User.Identity.Name, "admin"))
        {
            <div class="panel panel-default" style="background-color: lightgray">
                <div class="panel-body">
                    @using (Html.BeginForm("Create", "Years", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.NewYear, null, htmlAttributes: new { @class = "form-control", @Value = "2017", @type = "number", @min = "1900", @max = "2099", @step = "1", @required = true })
                        </div>
                                <div class="form-group text-center">
                                    <button type="submit" class="btn  btn-info btn-block">@Resources.Resource.Add</button>
                                </div>
                    }
                </div>
            </div>
        }
    </div>
</div>


